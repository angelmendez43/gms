 <!-- Vista formulario gms.viajes -->
 <record id="view_gms_viajes_form" model="ir.ui.view">
    <field name="name">gms.viaje.form</field>
    <field name="model">gms.viaje</field>
    <field name="arch" type="xml">
        <form string="Viajes">
            <header>
                <button name="action_confirm" string="Proceso" type="object" states="borrador" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'borrador')]}"/>
                <button name="action_paid" string="Liquidado" type="object" states="proceso" attrs="{'invisible': [('state', '!=', 'proceso')]}"/>
                <button name="action_cancel" string="Cancelado" type="object" attrs="{'invisible': [('state', 'in', ('liquidado', 'terminado'))]}"/>
                <button name="action_done" string="Terminado" type="object" states="proceso" attrs="{'invisible': [('state', '!=', 'proceso')]}"/>
                <field name="state" widget="statusbar" statusbar_visible="borrador,proceso,liquidado,cancelado,terminado"/>
            </header>
            
            <sheet>
                <group>
                    <field name="name"/>
                    <field name="fecha_viaje"/>
                    <field name="origen"/>
                    <field name="destino"/>
                </group>
                
                <!-- Agrega la pestaña de Gastos -->
                <notebook>
                    <page string="Gastos">
                        <field name="gastos_ids" widget="one2many_list">
                            <tree>
                                <field name="name"/>
                                <field name="producto_id"/>
                                <field name="precio_total"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </sheet>
        </form>
    </field>
</record>





